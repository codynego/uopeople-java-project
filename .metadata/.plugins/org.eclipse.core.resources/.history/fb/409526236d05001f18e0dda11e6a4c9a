import java.util.HashMap;
import java.util.ArrayList;

public class Student {
	public int id;
	public String name;
	public Integer age;
	public Integer grade;
	
	public static int constantid = 1;
	public static ArrayList<HashMap<String, Object>> allStudents;
	
	
	public Student(String name, Integer age, Integer grade) {
		this.id = constantid;
		if (!(name instanceof String)) {
			throw new IllegalArgumentException("name isnt of type string");
		}
		if (!(age instanceof Integer)) {
			throw new IllegalArgumentException("name isnt of type string");
		}
		if (age <= 0) {
			throw new IllegalArgumentException("age must be greater than 0");
		}
		this.name = name;
		this.age = age;
		this.grade = grade;
		
		HashMap<String, Object> newStudent = new HashMap<>();
		newStudent.put("id", this.id);
		newStudent.put("name", this.name);
		newStudent.put("grade", this.grade);
		
		allStudents.add(newStudent);
		
		
		constantid++;
		
	}
}
 